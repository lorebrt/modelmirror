{
    "primary_database": {
        "$reference": {
            "registry": {
                "schema": "database_service",
                "version": "1.0.0"
            },
            "instance": "primary_db"
        },
        "host": "primary.db.example.com",
        "port": 5432,
        "database_name": "app_primary"
    },
    "secondary_database": {
        "$reference": {
            "registry": {
                "schema": "database_service",
                "version": "1.0.0"
            }
        },
        "host": "secondary.db.example.com",
        "port": 5432,
        "database_name": "app_secondary"
    },
    "user_service": {
        "$reference": {
            "registry": {
                "schema": "user_service",
                "version": "1.0.0"
            },
            "instance": "main_user_service"
        },
        "database": "$primary_db",
        "cache_enabled": true
    },
    "microservices": [
        {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                },
                "instance": "auth_service"
            },
            "name": "authentication"
        },
        {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                },
                "instance": "notification_service"
            },
            "name": "notifications"
        },
        {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                }
            },
            "name": "analytics"
        }
    ],
    "service_registry": {
        "auth": "$auth_service",
        "notifications": "$notification_service",
        "payments": {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                }
            },
            "name": "payment_processor"
        }
    },
    "orchestrator": {
        "$reference": {
            "registry": {
                "schema": "complex_service",
                "version": "1.0.0"
            }
        },
        "database": "$primary_db",
        "user_service": "$main_user_service",
        "config": {
            "max_workers": "10",
            "timeout": "30",
            "retry_attempts": "3"
        }
    },
    "environment": "production",
    "debug_mode": false
}