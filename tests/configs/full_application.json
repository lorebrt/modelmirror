{
    "primary_database": {
        "$reference": {
            "registry": {"id": "database_service"},
            "instance": "primary_db"
        },
        "host": "primary.db.example.com",
        "port": 5432,
        "database_name": "app_primary"
    },
    "secondary_database": {
        "$reference": {
            "registry": {"id": "database_service"}
        },
        "host": "secondary.db.example.com",
        "port": 5432,
        "database_name": "app_secondary"
    },
    "user_service": {
        "$reference": {
            "registry": {"id": "user_service"},
            "instance": "main_user_service"
        },
        "database": "$primary_db",
        "cache_enabled": true
    },
    "microservices": [
        {
            "$reference": {
                "registry": {"id": "simple_service"},
                "instance": "auth_service"
            },
            "name": "authentication"
        },
        {
            "$reference": {
                "registry": {"id": "simple_service"},
                "instance": "notification_service"
            },
            "name": "notifications"
        },
        {
            "$reference": {
                "registry": {"id": "simple_service"}
            },
            "name": "analytics"
        }
    ],
    "service_registry": {
        "auth": "$auth_service",
        "notifications": "$notification_service",
        "payments": {
            "$reference": {
                "registry": {"id": "simple_service"}
            },
            "name": "payment_processor"
        }
    },
    "orchestrator": {
        "$reference": {
            "registry": {"id": "complex_service"}
        },
        "database": "$primary_db",
        "user_service": "$main_user_service",
        "config": {
            "max_workers": "10",
            "timeout": "30",
            "retry_attempts": "3"
        }
    },
    "environment": "production",
    "debug_mode": false
}