{
    "shared_db": {
        "$reference": {
            "registry": {
                "schema": "database_service",
                "version": "1.0.0"
            },
            "instance": "shared_database"
        },
        "host": "shared.db.example.com",
        "port": 5432,
        "database_name": "shared"
    },
    "service_1": {
        "$reference": {
            "registry": {
                "schema": "user_service",
                "version": "1.0.0"
            }
        },
        "database": "$shared_database",
        "cache_enabled": true
    },
    "service_2": {
        "$reference": {
            "registry": {
                "schema": "user_service",
                "version": "1.0.0"
            }
        },
        "database": "$shared_database",
        "cache_enabled": false
    },
    "service_3": {
        "$reference": {
            "registry": {
                "schema": "user_service",
                "version": "1.0.0"
            }
        },
        "database": "$shared_database",
        "cache_enabled": true
    }
}