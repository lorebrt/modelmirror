{
    "auth_db": {
        "$reference": {
            "registry": {
                "schema": "database_service",
                "version": "1.0.0"
            },
            "instance": "auth_database"
        },
        "host": "auth.db.example.com",
        "port": 5432,
        "database_name": "auth_service"
    },
    "user_db": {
        "$reference": {
            "registry": {
                "schema": "database_service",
                "version": "1.0.0"
            },
            "instance": "user_database"
        },
        "host": "user.db.example.com",
        "port": 5432,
        "database_name": "user_service"
    },
    "auth_service": {
        "$reference": {
            "registry": {
                "schema": "user_service",
                "version": "1.0.0"
            }
        },
        "database": "$auth_database",
        "cache_enabled": true
    },
    "service_registry": {
        "auth": {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                }
            },
            "name": "auth_microservice"
        },
        "notifications": {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                }
            },
            "name": "notification_microservice"
        },
        "payments": {
            "$reference": {
                "registry": {
                    "schema": "simple_service",
                    "version": "1.0.0"
                }
            },
            "name": "payment_microservice"
        }
    }
}